{
  "version": 2,
  "builds": [
    { "src": "backend/**/*.js", "use": "@vercel/node" },
    { "src": "frontend/**/*", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/backend/api/$1" },
    { "src": "/static/(.*)", "dest": "/frontend/static/$1" },
    { "src": "/(.*)", "dest": "/frontend/index.html" }
  ]
}
